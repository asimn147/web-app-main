<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Lego Set</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1">

  <!-- Include the navbar partial with an empty "page" value -->
  <%- include('../partials/navbar', {page: '' }) %>

  <div class="container mx-auto p-4">

    <!-- Hero section -->
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Edit Set: <%= set.name %></h1>
        </div>
      </div>
    </div>

    <!-- Form section -->
    <form action="/lego/editSet" method="POST" class="mt-8">
      
      <!-- Set Name -->
      <div class="mb-4">
        <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
        <input type="text" id="name" name="name" value="<%= set.name %>" required class="mt-1 p-2 w-full border rounded-md">
      </div>

      <!-- Year -->
      <div class="mb-4">
        <label for="year" class="block text-sm font-medium text-gray-700">Year</label>
        <input type="number" id="year" name="year" value="<%= set.year %>" required class="mt-1 p-2 w-full border rounded-md">
      </div>

      <!-- Number of Parts -->
      <div class="mb-4">
        <label for="num_parts" class="block text-sm font-medium text-gray-700">Number of Parts</label>
        <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" required class="mt-1 p-2 w-full border rounded-md">
      </div>

      <!-- Image URL -->
      <div class="mb-4">
        <label for="img_url" class="block text-sm font-medium text-gray-700">Image URL</label>
        <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" required class="mt-1 p-2 w-full border rounded-md">
      </div>

      <!-- Theme -->
      <div class="mb-4">
        <label for="theme_id" class="block text-sm font-medium text-gray-700">Theme</label>
        <select id="theme_id" name="theme_id" required class="mt-1 p-2 w-full border rounded-md">
          <% themes.forEach(theme => { %>
            <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
              <%= theme.name %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- Set Number (Readonly) -->
      <div class="mb-4">
        <label for="set_num" class="block text-sm font-medium text-gray-700">Set Number</label>
        <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" readonly class="mt-1 p-2 w-full border rounded-md cursor-not-allowed">
      </div>

      <!-- Submit button -->
      <button type="submit" class="mt-4 bg-blue-500 text-white px-4 py-2 rounded-md">Update Set</button>
      <a class="btn btn-error" href="/lego/deleteSet/<%= set.set_num %>">Delete Set</a>

    </form>

  </div>

</body>

</html>

