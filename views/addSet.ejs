<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Set</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body>

  <%- include('../partials/navbar', { page: '/lego/addSet' }) %>

  <div class="container mx-auto p-4">

    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Add Set</h1>
        </div>
      </div>
    </div>

    <form action="/lego/addSet" method="POST" class="max-w-md mx-auto">
      <div class="form-control">
        <label class="label">
          <span class="label-text">Name</span>
        </label>
        <input type="text" name="name" class="input" required />
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text">Year</span>
        </label>
        <input type="number" name="year" class="input" required />
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text">Number of Parts</span>
        </label>
        <input type="number" name="num_parts" class="input" required />
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text">Image URL</span>
        </label>
        <input type="url" name="img_url" class="input" required />
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text">Theme</span>
        </label>
        <select name="theme_id" class="select" required>
          <% themes.forEach(theme => { %>
            <option value="<%= theme.id %>">
              <%= theme.name %>
            </option>
          <% }) %>
        </select>
      </div>

      <div class="form-control">
        <label class="label">
          <span class="label-text">Set Number</span>
        </label>
        <input type="text" name="set_num" class="input" required />
      </div>

      <div class="form-control">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>

  </div>
</body>

</html>
